{
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "ES2020"
    ],
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}